<body>
    <div class="signup-center">
        <h1>Sign up</h1>
        <form method="post" action="/auth/signup">
            <div class="text-field">
                <input id="email" type="email" required="" name="email">
                <span></span>
                <label>Email</label>
            </div>
            <div class="text-field">
                <input type="text" required="" name="name" id="name">
                <span></span>
                <label>Fullname</label>
            </div>
            <div class="text-field date">
                <label>Date of birth</label>
                <input type="date" required="" name="dob" id="dob" style="padding-left: 150px;">
                <span></span>
            </div>
            <div class="text-field">
                <input type="text" required="" name="phone" id="phone" pattern="(0[3|5|7|8|9])+([0-9]{8})\b"
                title="Please enter a valid phone number!">
                <span></span>   
                <label>Phone number</label>
            </div>
            <div class="text-field">
                <input id="password" type="password" required="" name="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[a-zA-Z]).{8,}$"
                title="
                • At least 8 characters - the more characters, the better
                • A mixture of both uppercase and lowercase letters
                • A mixture of letters and numbers
                • (Optional) Add at least one special character, e.g., ! @ # ? ]">
                <span></span>
                <label>Password</label>
            </div>
            <div class="text-field" style="border-bottom: none;">
                <button id="btnSignup" type="submit">Sign up</button>
            </div>
            <div class="login-url">Already have an account? <a href=login.html>Login</a></div>
        </form>
    </div>
</body>

