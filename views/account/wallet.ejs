<body>
    <section style="margin-top: 70px;">
        <div class="breadcrumb" style="padding-left: 20%;">
            <a href="/index.html" style="color:black;">Home</a>
            >
            <a href="/account/profile.html" style="color: black;">Account</a>
            >
            <a style="text-decoration: none;">My wallet</a>
        </div>
        <div class="card" style="height: auto; display: block; margin: auto; margin-top: 30px; width: 1200px;">
            <div id="main" style="margin: auto;">
                <div id="pitch">
                    <h1 style="margin-bottom: 20px;">My wallet</h1>
                    <div id="detail-wallet" class="not-delayed">
                        <div class="list-card" style="border-top: 1px solid #d1cccc;" id="wallet">
                            <div class="creditcard-card">
                                <div class="creditcard-card__logo"><img
                                        src="https://cdn.visa.com/v2/assets/images/logos/visa/blue/logo.png">
                                </div>
                                <div>
                                    <div class="creditcard-card__type">VISA</div>
                                </div>
                                <div class="bacc-default-badge">Default</div>
                                <div class="creditcard-card__spacer"></div>
                                <div class="GBIZS7 " id="addressWallet"> </div>
                                <div class="creditcard-card__actions"><button
                                        class="bacc-secondary-action-btn">Delete</button><button type="button"
                                        class="btn btn-light btn--s btn--inline btn-light--disabled"
                                        aria-disabled="true">Set as default</button></div>
                            </div>
                        </div>
                        <div class="group-button" style="margin-bottom: 30px;">
                            <button class="btn2-connect-wallet" type="button" id="btnConnectMM">Connect your wallet</button>
                            <button class="btn2-remove-wallet" type="button" style="margin-left: 20px;">Remove your
                                wallet</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>
